<?xml version="1.0"?>
<package >
  <metadata>
    <!-- Required elements-->

    <!-- The identifier that must be unique within the hosting gallery -->
    <id>Geomatics.IO.NHibernate.Logging</id>

    <!-- The package version number that is used when resolving dependencies -->
    <version>$version$</version>

    <!-- The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. -->
    <description>Connects NHibernate logging infrastructure to Common.Logging.</description>

    <!-- Authors contain text that appears directly on the gallery -->
    <authors>Matthias Gernand, Christian Junk</authors>

    <!-- Optional elements -->
    <title>NHibernate.Logging</title>

    <!-- Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  -->
    <owners>christianjunk, geomatics</owners>

    <!-- License and project URLs provide links for the gallery -->
    <projectUrl>https://github.com/geomatics-io/NHibernate.Logging</projectUrl>
    <licenseUrl>https://raw.githubusercontent.com/geomatics-io/NHibernate.Logging/master/LICENSE.md</licenseUrl>

    <!-- The icon is used in Visual Studio's package manager UI -->
    <iconUrl>https://github.com/geomatics-io/NHibernate.Logging/raw/master/NHibernate.Logging.png</iconUrl>

    <!-- If true, this value prompts the user to accept the license when
            installing the package. -->
    <requireLicenseAcceptance>false</requireLicenseAcceptance>

    <!-- Tags appear in the gallery and can be used for tag searches -->
    <tags>NHibernate csharp csharp-library dotnet logger logging</tags>

	<!-- Dependencies are automatically installed when the package is installed -->
    <dependencies>
        <group targetFramework=".NETFramework4.6.1">
            <dependency id="NHibernate" version="[5.0.0,5.2.7]" />
            <dependency id="log4net" version="[2.0.0,2.0.8]" />
        </group>
    </dependencies>
  </metadata>

  <files>
    <file src="..\..\.assets\icon.png" target="images\icon.png" />
    <file src="bin\Release\NHibernate.Logging.CommonLogging.dll" target="lib\net461\NHibernate.Logging.CommonLogging.dll" />
    <file src="bin\Release\NHibernate.Logging.CommonLogging.pdb" target="lib\net461\NHibernate.Logging.CommonLogging.pdb" />
    <file src="bin\Release\NHibernate.Logging.CommonLogging.xml" target="lib\net461\NHibernate.Logging.CommonLogging.xml" />
  </files>
</package>